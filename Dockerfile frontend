# ---------- Build stage ----------
FROM node:20-alpine AS builder
WORKDIR /app

# Copy frontend source from current directory
COPY . ./

RUN npm install
RUN npm run build

# ---------- Run stage ----------
FROM nginx:alpine
WORKDIR /usr/share/nginx/html

# Copy nginx config
COPY nginx.config /etc/nginx/conf.d/default.conf

# Copy build output
COPY --from=builder /app/dist ./

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]